    <script>
        function checkAnswer(event, form) {
            event.preventDefault();
            const questionDiv = form.parentElement;
            const correctAnswer = questionDiv.dataset.correct;
            const selected = form.querySelector('input:checked');

            if (!selected) return;

            // Remove estilos anteriores
            questionDiv.querySelectorAll('label').forEach(label => {
                label.classList.remove('correct', 'incorrect');
            });

            // Marca resposta correta
            questionDiv.querySelector(`input[value="${correctAnswer}"]`)
                .parentElement.classList.add('correct');

            // Marca resposta do usuário se errada
            if (selected.value !== correctAnswer) {
                selected.parentElement.classList.add('incorrect');
            }

            // Desabilita inputs após resposta
            form.querySelectorAll('input').forEach(input => {
                input.disabled = true;
            });
            form.querySelector('button').disabled = true;
        }
    </script>
